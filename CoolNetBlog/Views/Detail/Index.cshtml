<script>
// 隐私文章 输入密码
$("#toUnlockBtn").click(
    function()
    {
        var v = $('#inputPassword').val();
        if(v==null||v==""){
            return;
        }

        $.ajax (
            {
                url: "/Detail/UnLock/ArticleUnLock",
                type: "POST",
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                data: JSON.stringify({
                    "ArticleId":$('#inputArticleId').val(),
                    "Password":$('#inputPassword').val()
                }),
                success: function(data, status){
                    if(data['code']==1){
                        // 密码正确隐藏表单div 显示返回后的主体内容
                        $('#lockFormDiv').hide();
                        $('#unLockContentP').html(data['content']);
                    }else{
                        // 错误显示提示文本
                        $('#pwErrorTipDiv').removeAttr('hidden');
                    }
                },
                error: function(err){
                    alert(err)
                    console.log(err)
                    $('#pwErrorTipDiv').removeAttr('hidden');
                }
            }
        );
    }
);

// 统一按钮弹出提示文本
function PopoverShow(idStr, tipMsg, dis=false){
    $('#'+idStr).attr('data-bs-content', tipMsg);
    var popover = new bootstrap.Popover($('#'+idStr));
    popover.show();
    setTimeout(function(){
        popover.dispose();
        if(dis){
            $('#'+idStr).attr("disabled","disabled");
        }
    }, 2500);
}

var commentShowIndex = 0;

// 发表评论
$("#toCommentBtn").click(
    function()
    {
        var email = $('#cEmailInput').val().trim();
        var name =$('#cNameInput').val().trim();
        var content = $('#cContentInput').val().trim();

        if(email==null||email==""||name==null||name==""||content==null||content==""){
            PopoverShow("toCommentBtn", "请把内容填写完整哦!~");
            return;
        }
        if(content.length<5){
            PopoverShow("toCommentBtn", "评论内容太少啦!~");
            return;
        }
        if (!!!(/^\w+([\.-]?\w+)*@@\w+([\.-]?\w+)*(\.\w{2,10})+$/.test(email)))
        {
            PopoverShow("toCommentBtn", "不是有效的邮箱!~");
            return;
        }

        $.ajax (
            {
                url: "/Comment/Comment/",
                type: "POST",
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                data: JSON.stringify({
                    "Email":email,
                    "Name":name,
                    "Content":content,
                    "SourceId":@Model?.DetailArticleData?.Id??0,
                    "SourceType":1
                }),
                success: function(data, status){
                    if(data['code']==1){
                        PopoverShow("toCommentBtn", data['tipMessage']);
                        $('#cEmailInput').val("");
                        $('#cNameInput').val("");
                        $('#cContentInput').val("");
                    }else{
                        PopoverShow("toCommentBtn", data['tipMessage']);
                    }
                },
                error: function(err){
                    PopoverShow("toCommentBtn", "评论失败,刷新再试试吧err");
                    console.log(err)
                }
            }
        );
    }
);


$("#moreCommentBtn").click(
    function()
    {
        commentShowIndex++;
        var url = "/Comment/GetArticleComments?sourceId="+@(Model?.DetailArticleData?.Id??0)+"&index="+commentShowIndex;
        $.ajax (
            {
                url: url,
                type: "GET",
                contentType: "application/json; charset=utf-8",
                success: function(data, status){
                    if(data['code']==1){
                        if(data['data'].length<=0)
                        {
                            commentShowIndex--;
                            // 没有更多评论数据 禁用按钮
                            if(commentShowIndex <= 0){
                                $('#commentShowDiv').hide();//收起评论区域
                                PopoverShow("commentShowBtn", "暂无更多评论啦",true);
                            }else{
                                PopoverShow("moreCommentBtn", "暂无更多评论啦",true);
                            }
                            return;
                        }
                        // 追加当前获取的评论数据到评论区域
                        $.each(data['data'], function(i,cItem){
                            // 迭代 拼接每个评论的所有回复
                            var rpNodeStr = "";
                            if(cItem['relatedReplies'].length>0)
                            {
                                $.each(cItem['relatedReplies'], function(i,rItem){
                                    var idStr = "comment"+cItem.id+"reply"+rItem.id;
                                    var replyTimeStr = Gb_GetFmtDateStr(rItem.replyTime);
                                    var replyContent = rItem.content;
                                    var replyInfoStr = '<small>'+replyTimeStr+' <a href="javascript:;" onClick="toReplyDialog(this,1)" comment-id="{3}" to-name="{4}">回复TA</a></small>';
                                    var tmpRpNodeStr = '<div class="accordion" id="accordion{0}"><div class="accordion-item"><h2 class="accordion-header" id="heading{0}">'+
                                    '<button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse{0}" aria-expanded="false" aria-controls="collapse{0}">'+
                                    '<p><small class="text text-info">{4}</small><br/>{1}</p>'+
                                    '</button></h2><div id="collapse{0}" class="accordion-collapse collapse" aria-labelledby="heading{0}" data-bs-parent="#accordion{0}"><div class="accordion-body text-end">'+
                                    '{2}'+'</div></div></div></div>';
                                    // 格式化占位符 第0个是元素的id 第1个是回复内容 第2个是回复时间|按钮组成的元素 第3个是关联的评论id 第4个是昵称 
                                    rpNodeStr += tmpRpNodeStr.format(idStr, replyContent, replyInfoStr, cItem.id, rItem.name);
                                });
                            }
                            // 格式化评论时间
                            var commentTimeStr = Gb_GetFmtDateStr(cItem.commentTime);
                            var cmNodeStr = '<div class="card card-body commentItem"><p class="text-start card-title"><small class="text text-info">'+
                                cItem.name+'</small> <small>'+
                                commentTimeStr+
                                ' <a href="javascript:;" onClick="toReplyDialog(this,0)" comment-id="' +
                                cItem.id+'" to-name="'+
                                cItem.name+
                                '">回复TA</a></small></p><p class="text-start card-text">'+
                                cItem.content+
                                '</p></div><div class="card-footer">'+
                                rpNodeStr+
                                '</div></br>';
                            $('#moreCommentBtnDiv').before(cmNodeStr);
                        });  
                    }else{
                        commentShowIndex--;
                        if(commentShowIndex < 1){
                            $('#commentShowDiv').hide();//收起评论区域
                            // 有问题 来自第一次显示评论 在"显示评论"按钮显示提示文本
                            PopoverShow("commentShowBtn", data['tipMessage']);
                        }else{
                            // 有问题 不是第一次显示评论 而是后续点击加载评论 在"加载评论"按钮显示提示文本
                            PopoverShow("moreCommentBtn", data['tipMessage']);
                        }
                    }
                },
                error: function(err){
                    commentShowIndex--;
                    if(commentShowIndex < 1){
                        $('#commentShowDiv').hide();//收起评论区域
                        PopoverShow("commentShowBtn", "加载评论失败err,重试一下?!");
                    }else{
                         PopoverShow("moreCommentBtn", "加载评论失败err,重试一下?!");
                    }
                    console.log(err)
                }
            }
        );
    }
);

//文章点赞按钮点击 target表态按钮对象；id文章id;type表态类型
function thumbUpBtnClick(target, id, type){
    $('.thumbUpBtn').attr("disabled", "true");
    $.ajax (
        {
            url: "/ThumbsUp/ThumbsUp",
            type: "POST",
            dataType: "json",
            contentType: "application/x-www-form-urlencoded; charset=utf-8",
            data: {
                "ArticleId":id,
                "Type":type,
            },
            success: function(data, status){
                if(data['code']==1){
                    // 点赞成功 将点赞数重显 
                    $('#thumbUpTextStart').text(data['data']['thumbUpStart']);
                    $('#thumbUpTextFun').text(data['data']['thumbUpFun']);
                    $('#thumbUpTextSilence').text(data['data']['thumbUpSilence']);
                }
                // bootstrap显示按钮弹出层 作为提示
                var thumbUpBtnId = target.getAttribute('id');
                PopoverShow(thumbUpBtnId, data['tipMessage']);

            },
            error: function(err){
                var thumbUpBtnId = target.getAttribute('id');
                PopoverShow(thumbUpBtnId, "表态失败，好意心领啦err");
            }
        }
    );
    
}

// 显示评论按钮被点击
function commentToggleBtnClick(status){
    if(status==1){
        $('#commentShowDiv').show();
        // commentShowIndex <1，说明还没有显示过评论，触发加载评论事件去加载 否则不必触发，而是开关显示评论区域
        if(commentShowIndex < 1){
            // 触发moreCommentBtn的点击事件
            $("#moreCommentBtn").click();
        }
    }else{
        $('#commentShowDiv').hide();
    }
}

// 分享链接按钮 复制url到剪贴板
function copyCommand(){
    $('#urlHidInput').val(window.location.href);
    $('#urlHidInput').removeAttr('hidden');
    $('#urlHidInput').focus();
    $('#urlHidInput').select();
    if (document.execCommand('copy')) {
        document.execCommand('copy');
        $('#urlHidInput').attr('hidden','hidden');
        $('#urlShareBtn').text("√链接已复制");
        $('#urlShareBtn').attr('disabled', 'disabled');
    }
}

// 确认回复
function toReply(){
    var email = $('#rEmailInput').val().trim();
    var name =$('#rNameInput').val().trim();
    var content = $('#rContentInput').val().trim();

    if(email==null||email==""||name==null||name==""||content==null||content==""){
        PopoverShow("ReplyModalOk", "请把内容填写完整哦!~");
        return;
    }
    if(content.length<5){
        PopoverShow("ReplyModalOk", "回复内容太少啦!~");
        return;
    }
    // 两个@@其实是一个 razor语法转义
    if (!!!(/^\w+([\.-]?\w+)*@@\w+([\.-]?\w+)*(\.\w{2,10})+$/.test(email)))
    {
        PopoverShow("ReplyModalOk", "不是有效的邮箱!~");
        return;
    }
    var cid = $('#rCommentIdInput').val().trim();
    var toNmae = $('#rToNameInput').val().trim();
    var layer = $('#rLayerInput').val();
    if(cid.isWhiteSpaceOrNull()||toNmae.isWhiteSpaceOrNull()||layer.isWhiteSpaceOrNull())
    {
        PopoverShow("ReplyModalOk", "不允许的操作，请重试!~");
        return;
    }   
    // 1回复某个回复，加上艾特符号；0回复评论，不用加
    if(layer=="1")
        content = toNmae+"："+content;
    // ajax调用回复
    $.ajax (
            {
                url: "/Comment/Reply/",
                type: "POST",
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                data: JSON.stringify({
                    "Email":email,
                    "Name":name,
                    "Content":content,
                    "CommentId":cid,
                }),
                success: function(data, status){
                    if(data['code']==1){
                        $('#ReplyModalOk').text(data['tipMessage']);
                        $('#ReplyModalOk').attr("disabled","disabled");
                        setTimeout(function(){
                            $('#ReplyModal').modal('hide');
                        }, 2000);

                    }else{
                        PopoverShow("ReplyModalOk", data['tipMessage']);
                    }
                },
                error: function(err){
                    PopoverShow("ReplyModalOk", "回复失败,重新再试试吧err");
                    console.log(err)
                }
            }
        );

}

// 点击了某个回复按钮 显示回复弹出层
function toReplyDialog(target,layer){
    CloseReplyModal();
    var cid = target.getAttribute('comment-id');
    var toName = target.getAttribute('to-name');
    if(cid.isWhiteSpaceOrNull()||toName.isWhiteSpaceOrNull())
        return;
    // 设置回复弹出层隐藏的属性值
    $('#rCommentIdInput').val(cid);
    $('#ReplyModalTip').text("@@"+toName);
    $('#rToNameInput').val("@@"+toName);
    // 1回复某个回复，0回复评论
    $('#rLayerInput').val(layer);
    $('#ReplyModal').modal("show");
}

function CloseReplyModal(){
    // 关闭清空回复弹出层
    $('#ReplyModal input').val("");
    $('#ReplyModal textarea').val("");
    $('#ReplyModal').modal('hide');
}
</script>

